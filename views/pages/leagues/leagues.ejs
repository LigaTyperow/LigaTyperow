<div class="container">
    <div class="card card-body">
        <h1 class="text-center">Lista lig:</h1>

    <% if (user) { %>
    <a href="/zalogowany/ligi/dodaj" class="btn btn-success mb-3">Dodaj nową ligę!</a>
    <% } %>

    <!-- Aby sort nie gryzł się z query w slug to trzeba to zrobić w jednym formularzu -->
    <form method="GET">
        <%- include('partials/search') %>

        <div class="row">
            <div class="col-3">
                <%- include('partials/filters') %>
            </div>
            <div class="col-9">
                <!-- Wylistowanie istniejących lig -->
                <% leagues.forEach(league => { %>
                <!-- Zmienna exist pomaga ustalić czy user należy do danej ligi -->
                <% let exist=false %>
                <div class="card bg-light mb-3">
                    <div class="card-body">
                        <p class="h3 mb-3"><%= league.name %></p>
                        <p><b>Opis:</b> <%= league.description %></p>
                        <p><b>Maksymalnie graczy:</b> <%= league.playersCount %></p>
                        <!-- .? - sprawdzenie czy do ligi jest przypisany user -->
                        <p><b>Właściciel ligi:</b> <%= league.user?.nick %></p>

                        <p><b>Gracze:</b> 
                            <!-- Wylistowanie przypisanych graczy -->
                            <% league.players.forEach(player => { %>                                 
                                <% if (player.nick == user.nick) { %>
                                    <!-- Jeśli user należy do ligi to wyróżniamy jego nick -->
                                    <b class="text-success" ><%= player.nick %>,</b>
                                    <% exist = true %>
                                <% } else { %>                                    
                                    <%= player.nick %>,                                    
                                <% } %>                                
                            <% }); %>
                        </p>
                        
                        <a href="/ligi/<%= league.slug %>" class="btn btn-primary">Zobacz</a>
                        <!-- Jeśli user jest zalogowany -->
                        <% if (user) { %>
                            <!-- Jeśli user należy już do ligi to nie pokazuj przycisku Dołącz -->
                            <% if (!exist) { %>
                                <a href="/zalogowany/ligi/<%= league.slug %>/dolacz" class="btn btn-success">Dołącz</a>
                            <% } %>
                            <a href="/zalogowany/ligi/<%= league.slug %>/edytuj" class="btn btn-warning">Edytuj</a>
                            <a href="/zalogowany/ligi/<%= league.slug %>/usun"
                                onclick="return confirm('Czy jesteś pewien?')" class="btn btn-danger">Usuń</a>
                        <% } %>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>

        <%- include('partials/pagination') %>
    </form>        
    </div>    
</div>